{
  "extends": ["tslint-config-airbnb"],
  "rules": {
    "import-name": false,
    "ordered-imports": false,
    "semicolon": [true, "always"],
    "ter-arrow-parens": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "objects": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "variable-name": [
      true,
      "allow-pascal-case",
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
